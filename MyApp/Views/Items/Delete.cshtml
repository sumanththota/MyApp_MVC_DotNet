@model MyApp.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<div class="card p-4">
    <h4 class="mb-3 text-danger">Are you sure you want to delete this item?</h4>
    <ul class="list-group mb-3">
        <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
        <li class="list-group-item"><strong>Price:</strong> @Model.Price $</li>
        <li class="list-group-item"><strong>Quantity:</strong> @Model.Quantity</li>
    </ul>
    <form asp-action="Delete" method="post">
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>